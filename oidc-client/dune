(* -*- tuareg -*- *)

let preprocess =
  match Sys.getenv "BISECT_ENABLE" with
  | "yes" -> "(preprocess (pps bisect_ppx))"
  | _ -> ""
  | exception Not_found -> ""
  
let () = Jbuild_plugin.V1.send @@ {|
(library
 (name OidcClient)
 (public_name oidc-client)
 (libraries oidc lwt yojson uri)
 |} ^ preprocess ^ {|)

(documentation
 (package oidc-client)
 (mld_files (:standard)))
|}
